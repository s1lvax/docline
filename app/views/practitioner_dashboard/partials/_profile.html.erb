<div class="bg-white">
  <div class="px-4 sm:px-6 lg:mx-auto lg:max-w-7xl lg:px-8">
    <div
      class="
        py-6 md:flex md:items-center md:justify-between lg:border-t lg:border-gray-200
      "
    >
      <div class="min-w-0 flex-1">
        <!-- Profile -->
        <div class="flex items-center">
          <!-- desktop avatar -->
          <img
            class="hidden size-16 rounded-full sm:block"
            src="https://images.unsplash.com/photo-1494790108377-be9c29b29330?auto=format&fit=facearea&facepad=2.6&w=256&h=256"
            alt="Emilia Birch"
          >
          <div>
            <div class="flex items-center">
              <!-- mobile avatar -->
              <img
                class="size-16 rounded-full sm:hidden"
                src="https://images.unsplash.com/photo-1494790108377-be9c29b29330?auto=format&fit=facearea&facepad=2.6&w=256&h=256"
                alt="Emilia Birch"
              >
              <h1 class="ml-3 text-2xl/7 font-bold text-gray-900 sm:truncate sm:text-2xl/9">
                Good morning,
                <%= Current.user.name %>
              </h1>
            </div>
            <dl class="mt-6 flex flex-col sm:mt-1 sm:ml-3 sm:flex-row sm:flex-wrap">
              <dt class="sr-only">Company</dt>
              <dd
                class="
                  flex items-center text-sm font-medium text-gray-500 capitalize sm:mr-6
                "
              >
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke-width="1.5"
                  stroke="currentColor"
                  class="mr-1.5 size-5 shrink-0 text-gray-400"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    d="M20.25 14.15v4.25c0 1.094-.787 2.036-1.872 2.18-2.087.277-4.216.42-6.378.42s-4.291-.143-6.378-.42c-1.085-.144-1.872-1.086-1.872-2.18v-4.25m16.5 0a2.18 2.18 0 0 0 .75-1.661V8.706c0-1.081-.768-2.015-1.837-2.175a48.114 48.114 0 0 0-3.413-.387m4.5 8.006c-.194.165-.42.295-.673.38A23.978 23.978 0 0 1 12 15.75c-2.648 0-5.195-.429-7.577-1.22a2.016 2.016 0 0 1-.673-.38m0 0A2.18 2.18 0 0 1 3 12.489V8.706c0-1.081.768-2.015 1.837-2.175a48.111 48.111 0 0 1 3.413-.387m7.5 0V5.25A2.25 2.25 0 0 0 13.5 3h-3a2.25 2.25 0 0 0-2.25 2.25v.894m7.5 0a48.667 48.667 0 0 0-7.5 0M12 12.75h.008v.008H12v-.008Z"
                  />
                </svg>
                Psychologist
              </dd>
              <dt class="sr-only">Account status</dt>
              <dd
                class="
                  mt-3 flex items-center text-sm font-medium text-gray-500 capitalize sm:mt-0
                  sm:mr-6
                "
              >
                <svg
                  class="mr-1.5 size-5 shrink-0 text-green-400"
                  viewBox="0 0 20 20"
                  fill="currentColor"
                  aria-hidden="true"
                  data-slot="icon"
                >
                  <path
                    fill-rule="evenodd"
                    d="M10 18a8 8 0 1 0 0-16 8 8 0 0 0 0 16Zm3.857-9.809a.75.75 0 0 0-1.214-.882l-3.483 4.79-1.88-1.88a.75.75 0 1 0-1.06 1.061l2.5 2.5a.75.75 0 0 0 1.137-.089l4-5.5Z"
                    clip-rule="evenodd"
                  />
                </svg>
                License Purchased
              </dd>
            </dl>
          </div>
        </div>
      </div>
      <div class="mt-6 flex space-x-3 md:mt-0 md:ml-4">
        <button type="button" class="btn btn-primary">
          View profile
        </button>
      </div>
    </div>
  </div>
</div>
