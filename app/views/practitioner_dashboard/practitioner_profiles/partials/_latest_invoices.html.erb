<section aria-labelledby="timeline-title" class="lg:col-span-1 lg:col-start-3">
  <div class="bg-white border border-gray-200 px-4 py-5 sm:rounded-lg sm:px-6">
    <h2 id="timeline-title" class="text-lg font-medium text-gray-900">Latest invoices</h2>
    <div class="mt-6 flow-root">
      <ul role="list" class="-mb-8">
        <% [
          { label: "Invoice for November", date: "2025-05-01" },
          { label: "Invoice for October", date: "2025-04-01" },
          { label: "Invoice for September", date: "2025-03-01" },
          { label: "Invoice for August", date: "2025-02-01" }
        ].each_with_index do |invoice, index| %>
          <li>
            <div class="relative pb-8">
              <% unless index == 3 %>
                <span
                  class="absolute top-4 left-4 -ml-px h-full w-0.5 bg-gray-200"
                  aria-hidden="true"
                ></span>
              <% end %>
              <div class="relative flex space-x-3">
                <div>
                  <span
                    class="
                      flex size-8 items-center justify-center rounded-full bg-gray-400 ring-8
                      ring-white
                    "
                  >
                    <svg
                      xmlns="http://www.w3.org/2000/svg"
                      fill="none"
                      viewBox="0 0 24 24"
                      stroke-width="1.5"
                      stroke="currentColor"
                      class="size-5 text-white"
                    >
                      <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        d="M21.75 6.75v10.5a2.25 2.25 0 01-2.25 2.25h-15a2.25 2.25 0 01-2.25-2.25V6.75m19.5 0A2.25 2.25 0 0019.5 4.5h-15a2.25 2.25 0 00-2.25 2.25m19.5 0v.243a2.25 2.25 0 01-1.07 1.916l-7.5 4.615a2.25 2.25 0 01-2.36 0L3.32 8.91a2.25 2.25 0 01-1.07-1.916V6.75"
                      />
                    </svg>
                  </span>
                </div>
                <div class="flex min-w-0 flex-1 justify-between space-x-4 pt-1.5">
                  <div>
                    <p class="text-sm text-gray-500"><%= invoice[:label] %></p>
                  </div>
                  <div class="text-right text-sm whitespace-nowrap text-gray-500">
                    <time datetime="<%= invoice[:date] %>"><%= Date.parse(invoice[:date]).strftime("%b %-d") %></time>
                  </div>
                </div>
              </div>
            </div>
          </li>
        <% end %>
      </ul>
    </div>
    <div class="mt-6 flex justify-center">
      <button type="button" class="btn btn-primary">See all invoices</button>
    </div>
  </div>
</section>
