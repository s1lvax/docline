<div
  data-mobile-menu-target="panel"
  class="hidden fixed inset-0 z-50 flex"
  role="dialog"
  aria-modal="true"
>
  <!-- backdrop -->
  <div class="fixed inset-0 bg-black/30" data-action="click->mobile-menu#close"></div>
  <!-- panel -->
  <div
    class="
      relative ml-auto w-full max-w-sm bg-white px-4 pb-6 pt-5 sm:px-6 sm:ring-1
      sm:ring-gray-900/10
    "
  >
    <div class="flex items-center justify-between">
      <!-- Close button -->
      <button
        type="button"
        class="-m-2.5 p-2.5 text-gray-700"
        data-action="click->mobile-menu#close"
      >
        <span class="sr-only">Close menu</span>
        <svg
          class="h-6 w-6"
          fill="none"
          viewBox="0 0 24 24"
          stroke="currentColor"
          stroke-width="2"
        >
          <path stroke-linecap="round" stroke-linejoin="round" d="M6 18L18 6M6 6l12 12"/>
        </svg>
      </button>
      <!-- Logo inside panel -->
      <%= link_to root_path, class: "-m-1.5 p-1.5" do %>
        <span class="sr-only">Your Company</span>
        <%= image_tag(
          "https://tailwindcss.com/plus-assets/img/logos/mark.svg?color=indigo&shade=600",
          class: "h-8 w-auto",
          alt: "Logo",
        ) %>
      <% end %>
    </div>
    <!-- Mobile nav links -->
    <div class="mt-6 space-y-2">
      <%= link_to "Home",
      practitioner_dashboard_path,
      class:
        "-mx-3 block rounded-lg px-3 py-2 text-base font-semibold text-gray-900 hover:bg-gray-50" %>
      <%= link_to "Profile",
      practitioner_dashboard_profile_path,
      class:
        "-mx-3 block rounded-lg px-3 py-2 text-base font-semibold text-gray-900 hover:bg-gray-50" %>
    </div>
  </div>
</div>
