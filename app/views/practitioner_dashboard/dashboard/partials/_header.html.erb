<header
  data-controller="mobile-menu"
  class="
    absolute inset-x-0 top-0 z-50 flex h-16 border-b border-gray-900/10 bg-white
  "
>
  <div
    class="
      mx-auto flex w-full max-w-7xl items-center justify-between px-4 sm:px-6 lg:px-8
    "
  >
    <!-- Left: hamburger (mobile) + logo -->
    <div class="flex flex-1 items-center gap-x-6">
      <!-- Hamburger: opens mobile nav -->
      <button
        type="button"
        class="-m-3 p-3 md:hidden"
        data-action="click->mobile-menu#open"
      >
        <span class="sr-only">Open main menu</span>
        <svg
          class="h-6 w-6 text-gray-900"
          fill="none"
          viewBox="0 0 24 24"
          stroke="currentColor"
          stroke-width="2"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            d="M4 6h16M4 12h16M4 18h16"
          />
        </svg>
      </button>
      <!-- Logo -->
      <%= link_to root_path do %>
        <%= image_tag(
          "https://tailwindcss.com/plus-assets/img/logos/mark.svg?color=indigo&shade=600",
          class: "h-8 w-auto",
          alt: "Your Company",
        ) %>
      <% end %>
    </div>
    <!-- Desktop nav -->
    <nav
      class="
        hidden md:flex md:gap-x-11 md:text-sm/6 md:font-semibold md:text-gray-700
      "
    >
      <%= link_to "Home", practitioner_dashboard_path, class: "hover:text-indigo-600" %>
      <%= link_to "Profile",
      practitioner_dashboard_practitioner_profile_path,
      class: "hover:text-indigo-600" %>
    </nav>
    <!-- Right: notifications + profile -->
    <div class="flex flex-1 items-center justify-end gap-x-8">
      <!-- Bell icon -->
      <button type="button" class="-m-2.5 p-2.5 text-gray-400 hover:text-gray-500">
        <span class="sr-only">View notifications</span>
        <svg
          class="h-6 w-6"
          fill="none"
          viewBox="0 0 24 24"
          stroke="currentColor"
          stroke-width="1.5"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            d="M14.857 17.082a23.848 23.848 0 0 0 5.454-1.31 A8.967 8.967 0 0 1 18 9.75V9 A6 6 0 0 0 6 9v.75a8.967 8.967 0 0 1-2.312 6.022 c1.733.64 3.56 1.085 5.455 1.31m5.714 0 a24.255 24.255 0 0 1-5.714 0 m5.714 0a3 3 0 1 1-5.714 0"
          />
        </svg>
      </button>
      <!-- Profile avatar -->
      <%= link_to practitioner_dashboard_practitioner_profile_path, class: "-m-1.5 p-1.5" do %>
        <span class="sr-only">Your profile</span>
        <%= image_tag(
          "https://images.unsplash.com/photo-1472099645785-5658abf4ff4e?ixlib=rb-1.2.1&auto=format&fit=facearea&facepad=2&w=256&h=256&q=80",
          class: "h-8 w-8 rounded-full bg-gray-800",
          alt: "Profile",
        ) %>
      <% end %>
    </div>
  </div>
  <%= render "practitioner_dashboard/dashboard/partials/mobile_menu" %>
</header>
