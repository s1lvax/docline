<%= render "practitioner_dashboard/dashboard/partials/header" %>
<div class="min-w-full pt-20 divide-y divide-gray-200 space-y-5">
  <% if @practitioner_availabilities.any? %>
    <% @practitioner_availabilities.each do |practitioner_availability| %>
      <div
        class="
          flex flex-col sm:flex-row justify-between items-center pb-5 sm:pb-0
        "
      >
        <%= render practitioner_availability %>
        <div class="w-full sm:w-auto flex flex-col sm:flex-row space-x-2 space-y-2">
          <%= link_to "Show",
          practitioner_dashboard_practitioner_availability_path(
            practitioner_availability,
          ),
          class:
            "w-full sm:w-auto text-center rounded-md px-3.5 py-2.5 bg-gray-100 hover:bg-gray-50 inline-block font-medium" %>
          <%= link_to "Edit",
          edit_practitioner_dashboard_practitioner_availability_path(
            practitioner_availability,
          ),
          class:
            "w-full sm:w-auto text-center rounded-md px-3.5 py-2.5 bg-gray-100 hover:bg-gray-50 inline-block font-medium" %>
          <%= button_to "Destroy",
          practitioner_dashboard_practitioner_availability_path(
            practitioner_availability,
          ),
          method: :delete,
          class:
            "w-full sm:w-auto rounded-md px-3.5 py-2.5 text-white bg-red-600 hover:bg-red-500 font-medium cursor-pointer",
          data: {
            turbo_confirm: "Are you sure?",
          } %>
        </div>
      </div>
    <% end %>
  <% else %>
    <p class="text-center my-10">No practitioner availabilities found.</p>
  <% end %>
</div>
